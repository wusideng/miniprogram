image{
  width: 90rpx;
  height: 90rpx;
  border: #888888 solid 3rpx;
  border-radius: 20rpx;
}
.tabList-content{
  display: flex;
  flex-direction: column;
  width: 400rpx;
}
.row{
  height: 100rpx;
  margin: 15rpx;
}
.row-left{
  float:right;
  width: 250rpx;
}
.row-left text{
  float:left;
  width: 250rpx;
}
.row-left-title{
  color:#000000;
  font-size: 30rpx;
  font-weight: bolder;
}
.row-right{
  float: right;
}
.control{
  float: right;
}
.shade{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  background-color:#ffffff;
  opacity: 0.8;
}